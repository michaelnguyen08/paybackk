<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.fifa_accounts</field>
        <field name="priority" eval="200" />
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <div name="fifa_accounts">
                    <h2>FIFA Investment Accounts</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="res_fifa_default_investment_debit_account"/>
                                        <field name="res_fifa_default_investment_debit_account" />
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="res_fifa_default_investment_credit_account"/>
                                        <field name="res_fifa_default_investment_credit_account" />
                                    </div>
                                </div>
                            </div>
                            <!-- 
                            <div class="o_setting_right_pane">
                                
                            </div>
                             -->
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
